<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.waz.zclient.ui.text.TypefaceTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="@dimen/wire__text_size__big"
        app:w_font="@string/wire__typeface__regular"
        android:paddingStart="@dimen/wire__padding__regular"
        android:paddingEnd="@dimen/wire__padding__regular"/>

    <com.waz.zclient.ui.text.TypefaceTextView
        android:id="@+id/subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2nd title"
        android:textSize="@dimen/wire__text_size__regular"
        app:w_font="@string/wire__typeface__regular"
        android:paddingStart="@dimen/wire__padding__regular"
        android:paddingEnd="@dimen/wire__padding__regular"/>


    <com.waz.zclient.ui.text.TypefaceTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3rd"
        android:textSize="@dimen/wire__text_size__small"
        app:w_font="@string/wire__typeface__regular"
        android:paddingStart="@dimen/wire__padding__regular"
        android:paddingEnd="@dimen/wire__padding__regular"/>

    <LinearLayout
        android:paddingStart="@dimen/wire__padding__regular"
        android:paddingEnd="@dimen/wire__padding__regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/call_quality_button_1"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="1"
            android:gravity="center"
            android:background="@drawable/call_quality_button_background"
            android:textSize="@dimen/wire__text_size__regular"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/call_quality_button_2"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="2"
            android:gravity="center"
            android:background="@drawable/call_quality_button_background"
            android:textSize="@dimen/wire__text_size__regular"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/call_quality_button_3"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="3"
            android:gravity="center"
            android:background="@drawable/call_quality_button_background"
            android:textSize="@dimen/wire__text_size__regular"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/call_quality_button_4"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="4"
            android:gravity="center"
            android:background="@drawable/call_quality_button_background"
            android:textSize="@dimen/wire__text_size__regular"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/call_quality_button_5"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="5"
            android:gravity="center"
            android:background="@drawable/call_quality_button_background"
            android:textSize="@dimen/wire__text_size__regular"/>

    </LinearLayout>

</LinearLayout>
